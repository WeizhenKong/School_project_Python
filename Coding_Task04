   "source": [
    "##Create a dictionary with the key of length of word and value of the frequence of each length\n",
    "def process_data(list_of_words):\n",
    "    length = []\n",
    "    for n in list_of_words:\n",
    "        length.append(len(n))\n",
    "    \n",
    "    some_data_structure = {}\n",
    "    for n in length:\n",
    "        if n not in some_data_structure:\n",
    "            some_data_structure[n] = 1\n",
    "        else:\n",
    "            some_data_structure[n] +=1\n",
    "    \n",
    "    return some_data_structure"
   ]
  },
